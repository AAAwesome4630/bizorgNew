
  <%= devise_error_messages! %>
<h2><center>Orginization Sign Up</center></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


  <div class="form-group col-md-4 col-md-offset-2">
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true ,class: "form-control", placeholder:"First Name"  %>
    </div>
  </div>
  <div class="form-group col-md-4">
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true ,class: "form-control", placeholder:"Last Name"%>
    </div>
  </div>
  
  <div class="form-group col-md-8 col-md-offset-2">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true ,class: "form-control", placeholder:"Last Name"%>
    </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-8 col-md-offset-2"> 
    <div class="field">
      <%= f.label "Orginization Name" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  </div>
  </div>
    <div class="form-row">
  <div class="form-group col-md-8 col-md-offset-2"> 
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, class: "form-control" %>
  </div>
  </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-2 col-md-offset-2"> 
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, class: "form-control" %>
  </div>
  </div>
  <div class="form-group col-md-1"> 
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, autofocus: true, class: "form-control" %>
  </div>
  </div>
  <div class="form-group col-md-3"> 
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country, autofocus: true, class: "form-control"%>
  </div>
  </div>
  <div class="form-group col-md-2"> 
  <div class="field">
    <%= f.label :zipcode %><em>(if applicable)</em> <br />
    <%= f.number_field :zipcode, autofocus: true, class: "form-control" %>
  </div>  
  </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-4 col-md-offset-2">
    <div class="field">
      <%= f.label "Type", class: "col-form-label" %><br />
      <%= f.select(:type_of, ['Public School', 'Private School', 'College/University', 'Non-Profit', 'Other'], {:prompt => "Type"},{class: "form-control"} )%>
    </div> 
  </div>
  <div class="form-group col-md-4">
    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.number_field :phone_number, autofocus: true, class: "form-control"%>
    </div> 
  </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2 col-md-offset-2">
    <div class="field">
      <%= f.label :public %><br />
      <%= f.check_box :public, autofocus: true%>
    </div> 
  </div>
  <div class="form-group col-md-2">
    <div class="field">
      <%= f.label :location_specific %><br />
      <%= f.check_box :location_specific, autofocus: true%>
    </div> 
  </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-8 col-md-offset-2">
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description,cols: 20, rows: 5, autofocus: true, class: "form-control big-text", placeholder:"Brief Description of Cause"%>
      </div>
    </div>
  </div>
    <div class="form-group col-md-8 col-md-offset-2">
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
  </div>
  </div>
  <div class="form-group col-md-8 col-md-offset-2">
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Password again" %>
    </div>
  </div>
  
<div class="form-group col-md-8 col-md-offset-2">
  <div class="actions">
    <center>
    <%= f.submit "Sign up", class: "btn btn-primary" %>
    </center>
    <center>
<%= render "orginizations/shared/links" %>
</center>
  </div>
  </div>
  <%end%>
<style>
  html,body{
    height:100%;
    width:100%;
    margin-top:0px;
  }
  .head{
    padding-bottom:10px;
  }
</style>